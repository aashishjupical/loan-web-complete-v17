<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <template id="account_loan_summary_move">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="o">
                <t t-call="web.external_layout">
                    <div class="page">
                        <style>
                            thead { display: table-header-group; }
                            .align_center { text-align: center; }
                        </style>
                        <div class="row">
                            <div class="col-6">
                            </div>
                            <div class="col-6">
                                <span style="color:#0F88F6;"><h3>Loan Summary</h3></span>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-5">
                                <table class="table table-bordered">
                                    <tr>
                                        <td>Loan Amount</td>
                                        <td align="right"><span t-field="o.company_id.currency_id.symbol"/><span t-esc="o.loan_id.loan_amount"/></td>
                                    </tr>
                                    <tr>
                                        <td>Monthly Interest Rate</td>
                                        <td align="right"><span t-esc="o.loan_id.rate_period"/></td>
                                    </tr>
                                    <tr>
                                        <td>Loan Terms</td>
                                        <td align="right"><span t-esc="o.loan_id.no_month"/></td>
                                    </tr>
                                    <tr>
                                        <td>Semi Monthly Installments</td>
                                        <td align="right"><span t-esc="o.loan_id.periods"/></td>
                                    </tr>
                                    <tr>
                                        <td>Date of Release</td>
                                        <td align="right"><span t-esc="o.loan_id.expected_end_date"/></td>
                                    </tr>
                                </table>
                            </div>
                            <div class="col-1"/>
                            <div class="col-6">
                                <table class="table table-bordered">
                                    <tr>
                                        <td>Scheduled Payment</td>
                                        <td align="right"><span t-field="o.company_id.currency_id.symbol"/><span t-esc="o.loan_id.total_invoice_amount"/></td>
                                    </tr>
                                    <tr>
                                        <td>Bank/Branch</td>
                                        <td align="right"></td>
                                    </tr>
                                    <tr>
                                        <td>Account Number</td>
                                        <td align="right"></td>
                                    </tr>
                                    <tr>
                                        <td>Service Charge</td>
                                        <td align="right">
                                            <t t-if="o.loan_id.ln_processing_fee">
                                                <span t-field="o.company_id.currency_id.symbol"/><span t-esc="o.loan_id.prcessing_fee_amt"/>
                                            </t>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td>Total interest</td>
                                        <td align="right"><span t-field="o.company_id.currency_id.symbol"/><span t-esc="o.loan_id.ttl_interest_amt"/></td>
                                    </tr>
                                </table>
                            </div>
                        </div>
                        <br/>
                        <br/>
                        <table class="table table-striped">
                            <thead>
                                <th width="9%">Payment Number</th>
                                <th width="10%" align="left">Payment Date</th>
                                <th width="16%" align="center">Beginning Balance</th>
                                <th width="12%" align="center">Amortization</th>
                                <th width="15%" align="center">Principal</th>
                                <th width="15%" align="center">Interest</th>
                                <th width="15%" align="center">Ending Balance</th>
                                <th width="10%" align="center">Bank/Branch</th>
                                <th width="10%" align="center">Check No.</th>
                            </thead>
                            <tbody>
                                <tr t-foreach="o.loan_id.line_ids" t-as="line" style="page-break-inside: avoid;">
                                    <td width="3%" align="center">
                                        <span t-esc="line.sequence"/>
                                    </td>
                                    <td width="10%" align="left">
                                            <span t-field="line.date" t-field-options='{"format": "MM-dd-yyyy"}'/>
                                    </td>
                                    <td width="16%" align="center">
                                        <span t-field="o.company_id.currency_id.symbol"/><span t-esc="'%.2f'% line.pending_principal_amount"/>
                                    </td>
                                    <td width="12%" align="center">
                                        <span t-field="o.company_id.currency_id.symbol"/><span t-esc="'%.2f'% line.payment_amount"/>
                                    </td>
                                    <td width="15%" align="center">
                                        <span t-field="o.company_id.currency_id.symbol"/><span t-esc="'%.2f'% line.principal_amount"/>
                                    </td>
                                    <td width="15%" align="center">
                                        <span t-field="o.company_id.currency_id.symbol"/><span t-esc="'%.2f'% line.interests_amount"/>
                                    </td>
                                    <td width="15%" align="center">
                                        <span t-field="o.company_id.currency_id.symbol"/><span t-esc="'%.2f'% line.final_pending_principal_amount"/>
                                    </td>
                                    <td/>
                                    <td/>
                                </tr>
                            </tbody>
                        </table>
                        <br/>
                        <br/>
                        <div class="row">
                            <div class="col-6">
                                <span>Received By:</span>
                            </div>
                            <div class="col-6">
                                <span>Prepared By:</span>
                            </div>
                        </div>

                    </div>
                </t>
            </t>
        </t>
    </template>
</odoo>