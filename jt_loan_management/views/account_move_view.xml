<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_move_form" model="ir.ui.view">
        <field name="name">Add to_be_reversed and reversal_id fields</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <field name="invoice_date" position="after">
                <field name="loan_line_id"
                       attrs="{'invisible': [('loan_line_id','=',False)]}"
                       readonly="True"/>
                <field name="loan_hide" invisible="1"/>
                <field name="is_penlty" invisible="1"/>
            </field>
            <xpath expr="//sheet/div[@name='button_box']" position="inside">
                <button name="action_loan_lines"
                        class="oe_stat_button"
                        icon="fa-money"
                        type="object" string="Loan Installment" attrs="{'invisible': [('loan_hide','!=',False)]}">
                </button>
            </xpath>
        </field>
    </record>

    <record id="ln_inht_view_account_invoice_filter" model="ir.ui.view">
            <field name="name">account.invoice.select</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_account_invoice_filter"/>
            <field name="arch" type="xml">
                <filter name="to_check" position="after">
                    <filter string="Penalty" name="to_penlty" domain="[('is_penlty', '=', True)]"/>
                </filter>
            </field>
    </record>
</odoo>
