<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="0">
        <!-- Loan Customer notify Mail Template -->
        <record id="customer_notify_mail_template" model="mail.template">
            <field name="name">Loan: Customer Notify Mail Template</field>
            <field name="model_id" ref="project.model_project_task" />
            <field name="subject">E-Sign Loan Agreement</field>
            <field name="partner_to">{{ object.partner_id.id }}</field>
             <!-- <field name="email_to">{{ object.partner_id.email }}</field> -->
            <field name="email_from">"{{ object.company_id.name }}" &lt;{{ (object.company_id.email or user.email) }}&gt;</field>
            <field name="lang">{{ object.partner_id.lang }}</field>
            <field name="auto_delete" eval="False"/>
            <field name="body_html" type="html">
                <div style="margin: 0px; padding: 0px;">
                    <table width="100%" style="padding-top:40px;padding-bottom:40px;">
                        <tr>
                            <td style="padding: 0 30px;">
                                <img t-attf-src="/logo.png?company={{ object.company_id.id }}" style="width:245px;margin-top: -25px;" t-att-alt="object.company_id.name"/>
                                <p style="font-weight: 400;font-size: 28px;line-height: 34px;color: rgba(0, 0, 0, 0.7);">Your Attestation Is Completed.
                                     <br/> 
                                    <span style="font-weight: 700;">Last Step E-Sign Loan Agreement</span>
                                </p>
                                <p style="font-weight: 600;font-size: 18px;line-height: 22px;color: rgba(0, 0, 0, 0.7);">Hi
                                    <t t-out="object.partner_id.name or ''" />,
                                </p>
                                <p style="font-weight: 400;font-size: 18px;line-height: 22px;color: rgba(0, 0, 0, 0.7);">Attestation Has been Completed.</p>
                                <p style="font-weight: 400;font-size: 18px;line-height: 22px;color: rgba(0, 0, 0, 0.7);max-width: 50%;">Last Step, Your Signature is required for the Loan Agreement.</p>
                                <p style="font-weight: 400;font-size: 18px;line-height: 22px;color: rgba(0, 0, 0, 0.7);">Note : Please sign in <t t-out="ctx.get('hours') or '0'"/>:<t t-out="ctx.get('minutes') or '0'"/> hours.</p>
                                <p style="font-weight: 400;font-size: 18px;line-height: 22px;color: rgba(0, 0, 0, 0.7); max-width: 49%;">In the event you do not sign within the timeframe - Loan Will be canceled.</p>
                                <p style="font-weight: 400;font-size: 18px;line-height: 22px;color: rgba(0, 0, 0, 0.7); max-width: 50%;">Attached Below Are the Product Disclosure Sheet &amp; Agreement</p>
                                
                                <div style="display: inline-flex; flex-direction: column;">                     
                                    <a t-att-href="object.do_esign_url" style="border-radius: 26.5px; background:#300C46;;font-weight: 600;font-size: 16px;line-height: 20px;text-align: center;letter-spacing: 0.2px;color: #FFFFFF; text-decoration: none; width: 321px; padding: 16px 0 17px 0; display: inline-block;"><span>e-Sign Loan Agreement</span></a>
                                </div>
                            </td>
                        </tr>
                    </table>
                </div>
                
            </field>
        </record>

        <!-- Terminate loan Project Mail Template -->
        <record id="terminate_mail_template" model="mail.template">
            <field name="name">Loan: Rejected Mail Template</field>
            <field name="model_id" ref="project.model_project_task" />
            <field name="subject">Loan: Rejected</field>
            <field name="partner_to">{{ object.partner_id.id }}</field>
            <field name="email_from">"{{ object.company_id.name }}" &lt;{{ (object.company_id.email or user.email) }}&gt;</field>
            <field name="lang">{{ object.partner_id.lang }}</field>
            <field name="auto_delete" eval="False"/>
            <field name="body_html" type="html">
               <div style="margin: 0px; padding: 0px;">
                    <table width="100%" style="padding-top:40px;padding-bottom:40px;">
                        <tr>
                            <td style="padding: 0 30px;">
                                <p style="font-weight: 400;font-size: 28px;line-height: 34px;color: rgba(0, 0, 0, 0.7);">Your Loan has been
                                     <br/> 
                                    <span style="font-weight: 700;">Rejected</span>
                                </p>
                                <p style="font-weight: 600;font-size: 18px;line-height: 22px;color: rgba(0, 0, 0, 0.7);">Hi
                                    <t t-out="object.name or ''" />,
                                </p>
                                <p style="font-weight: 400;font-size: 18px;line-height: 22px;color: rgba(0, 0, 0, 0.7); margin: 0;">We are Sorry,</p>
                                <p style="font-weight: 400;font-size: 18px;line-height: 22px;color: rgba(0, 0, 0, 0.7); margin: 0 0 30px 0;">Your Loan has been Rejected.</p>
                                <p style="font-weight: 400;font-size: 18px;line-height: 22px;color: rgba(0, 0, 0, 0.7); margin: 0;">Application No. : <t t-out="object.loan_pro_id.name or ''"/></p>
                                <p style="font-weight: 400;font-size: 18px;line-height: 22px;color: rgba(0, 0, 0, 0.7); margin: 0;">Date Applied :<t t-out="ctx.get('a_date') or ''"/></p>
                            </td>
                        </tr>
                    </table>
                </div>
            </field>
        </record>

        <!-- Loan Stamped Agreement Mail Template -->
        <record id="stamped_agreement_mail_template" model="mail.template">
            <field name="name">Stamped Loan Agreement</field>
            <field name="model_id" ref="project.model_project_task" />
            <field name="subject">Loan:Stamped Agreement</field>
            <field name="partner_to">{{ object.partner_id.id }}</field>
             <!-- <field name="email_to">{{ object.partner_id.email }}</field> -->
            <field name="email_from">"{{ object.company_id.name }}" &lt;{{ (object.company_id.email or user.email) }}&gt;</field>
            <field name="lang">{{ object.partner_id.lang }}</field>
            <field name="auto_delete" eval="False"/>
            <field name="body_html" type="html">
                <div style="margin: 0px; padding: 0px;">
                    <table width="100%" style="padding-top:40px;padding-bottom:40px;">
                        <tr>
                            <td style="padding: 0 30px;">
                                <div style="margin-top: -90px;">
                                    <p style="font-weight: 400;font-size: 28px;line-height: 34px;color: rgba(0, 0, 0, 0.7);">Your Loan
                                        Agreement
                                        <br/>
                                        <span style="font-weight: 700;">(stamped) is ready</span>
                                    </p>
                                    <p style="font-weight: 600;font-size: 18px;line-height: 22px;color: rgba(0, 0, 0, 0.7);">Hi
                                        <t t-out="object.partner_id.name or ''" />,
                                    </p>
                                    <p style="font-weight: 400;font-size: 18px;line-height: 22px;color: rgba(0, 0, 0, 0.7);max-width: 50%;">
                                        Attached Below is your Stamped Agreement</p>
                                </div>
                            </td>
                        </tr>
                    </table>
                </div>
            </field>
        </record>

        <!-- Loan Approved Mail Template -->
        <record id="mail_template_data_loan_approved" model="mail.template">
            <field name="name">Loan: Loan Approved Latter</field>
            <field name="model_id" ref="project.model_project_task" />
            <field name="subject">Loan Approved Latter</field>
            <field name="partner_to">{{ object.partner_id.id }}</field>
             <!-- <field name="email_to">{{ object.partner_id.email }}</field> -->
            <field name="email_from">"{{ object.company_id.name }}" &lt;{{ (object.company_id.email or user.email) }}&gt;</field>
            <field name="lang">{{ object.partner_id.lang }}</field>
            <field name="auto_delete" eval="False"/>
            <field name="body_html" type="html">
                <div style="margin: 0px; padding: 0px; font-size: 13px;">
                    <table width="100%" style="padding-top:40px;padding-bottom:40px;">
                        <tr>
                            <td style="padding: 30px 30px;">
                                <p style="font-weight: 400;font-size: 28px;line-height: 34px;color: rgba(0, 0, 0, 0.7);">Congrats!
                                     <br/> 
                                    <span style="font-weight: 700;">Your loan has been Approved!</span>
                                </p>
                                <p style="font-weight: 600;font-size: 18px;line-height: 22px;color: rgba(0, 0, 0, 0.7);">Hi
                                    <t t-out="object.partner_id.name or 'customer'">Brandon Freeman</t>
                                </p>
                                <p style="font-weight: 400;font-size: 18px;line-height: 22px;color: rgba(0, 0, 0, 0.7);">Your Loan has been approved &amp; is Required to do your Attestation.</p>
                                <p style="font-weight: 400;font-size: 18px;line-height: 22px;color: rgba(0, 0, 0, 0.7);">Click <span style="font-weight: 700;">Do Attestation </span> below.</p>
                                <p style="font-weight: 400;font-size: 18px;line-height: 22px;color: rgba(0, 0, 0, 0.7);">Note : Please accept the loan within <t t-out="ctx.get('hours') or '0'"/>:<t t-out="ctx.get('minutes') or '0'"/> Hours</p>
                                <p style="font-weight: 400;font-size: 18px;line-height: 22px;color: rgba(0, 0, 0, 0.7); max-width: 49%;">In the event you do not want to accept the loan - System will automatically cancel loan offer within <t t-out="ctx.get('hours') or '0'"/>:<t t-out="ctx.get('minutes') or '0'"/> Hours.</p>
                                <p style="font-weight: 400;font-size: 18px;line-height: 22px;color: rgba(0, 0, 0, 0.7); max-width: 50%;">Attached Below are the Product Disclosure Sheet &amp; Agreement.</p>
                                
                                <div style="display: inline-flex; flex-direction: column;">                     
                                    <a t-att-href="object.do_attestation_url" style="border-radius: 26.5px;font-weight: 600;font-size: 16px;line-height: 20px;text-align: center;letter-spacing: 0.2px;color: #FFFFFF; text-decoration: none; width: 300px; padding: 16px 27px; display: inline-block;background-color: #300C46;"><span>Do Attestation</span></a>
                                </div>
                            </td>
                        </tr>
                    </table>
                </div>
            </field>
        </record>

        <!-- Google Meet mail to partner -->
        <record id="custom_meet_mail_template" model="mail.template">
            <field name="name">Calendar:Meeting Invitation Template</field>
            <field name="model_id" ref="calendar.model_calendar_attendee"/>
            <field name="subject"> Meeting Invitation to {{ object.event_id.name }}</field>
            <field name="email_from">{{ (object.event_id.user_id.email_formatted or user.email_formatted or '') }}</field>
            <field name="email_to">{{ ('' if object.partner_id.email and object.partner_id.email == object.email else object.email) }}</field>
            <field name="partner_to">{{ object.partner_id.id if object.partner_id.email and object.partner_id.email == object.email else False }}</field>
            <field name="lang">{{ object.partner_id.lang }}</field>
            <field name="body_html" type="html">
                <div style="margin: 0px; padding: 0px;text-align:center;">
                    <table width="100%" style="padding-top:40px;padding-bottom:40px;">
                        <tr>
                            <td style="padding: 30px 28px;">
                                <img t-attf-src="/logo.png?company={{ object.company_id.id }}" style="width:245px;margin-top: -25px; margin-bottom:25px;" t-att-alt="object.company_id.name"/>
                               
                                <div style="background-color: rgba(0, 0, 0, 0.05);border-radius: 5px; padding: 13px 26px; position: relative; margin-bottom: 29px; width: 100%;text-align:center;">
                                    <table style="text-align: left; width: 100%;">
                                        <tr>
                                          <th style="color: #00B5DB; display: inline-block;">Agenda</th>
                                          <td style="padding: 0 0 15px 0;">Video Call with Assester</td>
                                        </tr>
                                        <tr>
                                            <th style="color: #00B5DB; display: inline-block;">When</th>
                                            <td style="padding: 0 0 15px 0;">
                                                <t t-out="format_time(time=object.event_id.start, tz=object.mail_tz, time_format='short', lang_code=object.env.lang) or ''"></t> 
                                                - <t t-out="format_time(time=object.event_id.stop, tz=object.mail_tz, time_format='short', lang_code=object.env.lang) or ''"></t>
                                                <t t-out="format_datetime(dt=object.event_id.start, tz=object.mail_tz if not object.event_id.allday else None, dt_format='EEE', lang_code=object.env.lang) or ''"></t> 
                                                <t t-out="format_datetime(dt=object.event_id.start, tz=object.mail_tz if not object.event_id.allday else None, dt_format='MMMM dd, y', lang_code=object.env.lang) or ''"></t>
                                            </td>
                                        </tr>
                                        <tr>
                                          <th style="color: #00B5DB; display: inline-block;">Where</th>

                                          <td style="padding: 0 0 0 0;"><a style="color:rgba(0,0,0,0.7);" t-att-href="object.event_id.videocall_location" target="_blank" t-out="object.event_id.videocall_location or ''"></a></td>
                                        </tr>
                                      </table>
                                </div>
                                <div style="">
                                    <a t-att-href="object.event_id.videocall_location" style="border-radius: 26.5px; background:#300C46;font-weight: 600;font-size: 16px;line-height: 20px;text-align: center;letter-spacing: 0.2px;color: #FFFFFF; text-decoration: none; width: 506px; padding: 16px 27px; display: inline-block;"><span>Join Meeting</span></a>
                                </div>
                            </td>
                        </tr>
                    </table>
                </div>
            </field>
        </record>

    </data>
</odoo>