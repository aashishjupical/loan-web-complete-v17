                                                method="post">
                                                <div class="row list-input">
                                                    <div class="col-md-12 mr0">
                                                        <div class="single-get-touch">
                                                            <input class="form-control" type="text" name="fname"  t-att-value="fname"
                                                                placeholder="Full Name" required="" />
                                                        </div>
                                                    </div>


                                                    <div class="col-md-6 mr0">
                                                        <div class="single-get-touch">
                                                            <input class="form-control" type="email" name="email"  t-att-value="email"
                                                                placeholder="Email" required="" />
                                                        </div>
                                                    </div>
                                                    <div class="col-md-6">
                                                        <div class="single-get-touch">
                                                            <input class="form-control" type="text" name="phone"  t-att-value="phone"
                                                                placeholder="Phone" required="" />
                                                        </div>
                                                    </div>
                                                    <div class="col-md-12 mr0">
                                                        <div class="single-get-touch">
                                                            <input class="form-control" type="text" name="house_number1"  t-att-value="house_number1"
                                                                placeholder="Address Line 1"
                                                                required="" />
                                                        </div>
                                                    </div>
                                                    <div class="col-md-12 mr0">
                                                        <div class="single-get-touch">
                                                            <input class="form-control" type="text" name="house_number2"  t-att-value="house_number2"
                                                                placeholder="Address Line 2"
                                                                required="" />
                                                        </div>
                                                    </div>

                                                    <div class="col-md-6 mr0">
                                                        <div class="single-get-touch">
                                                            <input class="form-control" type="text" name="district"  t-att-value="district"
                                                                placeholder="District" required="" />
                                                        </div>
                                                    </div>

                                                    <div class="col-md-6 mr0">
                                                        <div class="single-get-touch">
                                                            <input class="form-control" type="text" name="postcode"  t-att-value="postcode"
                                                                placeholder="Postcode" required="" />
                                                        </div>
                                                    </div>

                                                    <div class="col-md-6">
                                                        <div class="single-get-touch">
                                                            <t t-set="states" t-value="request.env['res.country.state'].sudo().search([])" />
                                                            <select name="state_id" t-attf-class="form-control badge-pill input_tag_h form_input_f_14 border-color-sty">
                                                                <option value="">Select State</option>
                                                                <t t-as="state" t-foreach="states or []">
                                                                    <option t-att-selected="state.id == state_id" t-att-data-country_id="state.country_id.id"
                                                                        t-att-value="state.id">
                                                                        <t t-esc="state.name" />
                                                                    </option>
                                                                </t>
                                                            </select>
                                                        </div>
                                                    </div>

                                                    <div class="col-md-6">
                                                        <div class="single-get-touch">
                                                            <t t-set="countries" t-value="request.env['res.country'].sudo().search([])" />
                                                            <select name="country" class="form-control">
                                                                <option value="">Select Country</option>
                                                                <t t-as="country" t-foreach="countries or []">
                                                                    <option t-att-selected="country.id == country_id if country_id else country.id == current_country"
                                                                        t-att-value="country.id">
                                                                        <t t-esc="country.name" />
                                                                    </option>
                                                                </t>
                                                            </select>
                                                        </div>
                                                    </div>

                                                    <div class="col-md-12 text-center">
                                                        <div class="single-get-touch mt-3">
                                                            <button type="submit" name="submit"
                                                                class="btn btn-dark btn-submit-ctm" id="hidden_box_btn">Apply
                                                                Now</button>
                                                        </div>
                                                    </div>
                                                </div>
                                            </form>
