                                            <div class="mt-n6 mb-10">
                                                <div class="row">
                                                    <t t-set="products" t-value="request.env['product.product'].sudo().search([('detailed_type','=','loan')])"/>
                                                        
                                                    <t t-as="product" t-foreach="products or []">
                                                        <t t-set="product_val" t-value="product.id"/>
                                                        <div
                                                            class="col-xl-4 col-lg-4 col-md-6 col-sm-12 col-12">
                                                            <div class="card mb-5 text-center border-0 smooth-shadow-sm">
                                                                <div class="card-img">
                                                                    <a t-attf-href="/my_loan?product_val={{product_val}}"
                                                                        class="imghover"> 
                                                                        <img t-if="product.image_1920" style="width: 300px;height: 250px;" t-attf-src="data:image/*;base64,{{product.image_1920}}" itemprop="image"/>
