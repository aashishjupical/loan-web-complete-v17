<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data noupdate="0">
        <record id="submit_doc_dashboard" model="ir.ui.view">
            <field name="name">Dashboard Submit</field>
            <field name="type">qweb</field>
            <field name="key">jt_loan_project.submit_doc_dashboard</field>
            <field name="arch" type="xml">
                <t name="Dashboard Submit Doc" priority="19" t-name="jt_loan_project.submit_doc_dashboard">
                    <t t-call="website.layout">
                        <div class="oe_structure" id="wrap">
                            <div class="oe_structure"/>
                           <section class="progress-area">
                                <div class="container">
                                    <ul class="list-unstyled multi-steps pt80 pb80">
                                        <li id="step-1" class="is-active">Apply Loan<div
                                                class="progress-bar progress-bar__success">
                                            </div>
                                        </li>
                                        <li id="step-2" >Personal Info <div
                                                class="progress-bar progress-bar__success">
                                                <div class="progress-bar__bar"/>                                    
                                            </div>
                                        </li>
                                        <li id="step-3">Business Info<div
                                                class="progress-bar progress-bar__success">
                                                <div class="progress-bar__bar"/>                                    
                                            </div>
                                        </li>
                                        <li id="step-4">Financial Documents<div
                                                class="progress-bar progress-bar__success">
                                                <div class="progress-bar__bar"/>
                                            </div>
                                        </li>
                                        <li id="step-5">Review Submit<div
                                                class="progress-bar progress-bar__success">
                                                <div class="progress-bar__bar"/>
                                            </div>
                                        </li>
                                        <li id="step-6">Success</li>
                                    </ul>
                                </div>
                            </section>
                            <section class="need_esign_area px80">
                                <div class="container">
                                    <div class="row justify-content-center text-center">
                                        <div class="py-3">
                                            <div class="py-3">
                                            <h1>User Dashboard</h1>
                                            <p> My Loan (Submit DOC)</p>
                                        </div>
                                        </div>
                                    </div>
                                    <div class="row justify-content-center">
                                        <div class="col-md-12 col-lg-10">
                                            <form enctype="multipart/form-data" method="post">
                                                <div class="row list-input">
                                                    <div class="col-md-4 mr0">
                                                        <p>Monthly Repayment</p>
                                                        <div class="single-get-touch">
                                                            <input class="form-control" type="text" name="payment" placeholder="Monthly Repayment" t-att-value="monthly_repayment" required=""  t-att-readonly="'readonly'" />
                                                        </div>
                                                    </div>
                                                    <div class="col-md-4">
                                                        <p>Principal Sum</p>
                                                        <div class="single-get-touch">
                                                            <input class="form-control" type="text" t-att-value="principal_sum" name="ps" placeholder="Principal Sum"  t-att-readonly="'readonly'" required=""/>
                                                        </div>
                                                    </div>

                                                    <div class="col-md-4 mr0">
                                                        <p>Total Repayment</p>
                                                        <div class="single-get-touch">
                                                            <input class="form-control" type="text" name="tr" t-att-value="total_repayment"  placeholder="Total Repayment"  t-att-readonly="'readonly'" required=""/>
                                                        </div>
                                                    </div>
                                                    <div class="col-md-4">
                                                        <p>Interest Rate</p>
                                                        <div class="single-get-touch">
                                                            <input class="form-control" type="text" t-att-value="interest_rate" name="ir" placeholder="Interest Rate"  t-att-readonly="'readonly'" required=""/>
                                                        </div>
                                                    </div>
                                                    <div class="col-md-4">
                                                        <p>Tenure/Duration</p>
                                                        <div class="single-get-touch">
                                                            <input class="form-control" type="text" t-att-value="tenure_duration" name="tenure" placeholder="Tenure/Duration" t-att-readonly="'readonly'"  required=""/>
                                                        </div>
                                                       <!--  <div class="single-get-touch">
                                                          <t t-set="durations" t-value="request.env['loan.month'].sudo().search([])"/>
                                                            <select name="duration_id" t-attf-class="form-control badge-pill input_tag_h form_input_f_14 border-color-sty">
                                                                <option value="">Select Duration</option>
                                                                <t t-as="duration" t-foreach="durations or []">
                                                                    <option  t-att-selected="duration.id == duration_id" t-att-value="duration.id">
                                                                        <t t-esc="duration.name"/>
                                                                    </option>
                                                                </t>
                                                            </select>
                                                        </div> -->
                                                    </div>
                                                    <div class="col-md-4 mr0">
                                                        <p>Stampping Fee</p>
                                                        <div class="single-get-touch">
                                                            <input class="form-control" type="text" t-att-value="stamping_fee" name="sf" placeholder="Stampping Fee" t-att-readonly="'readonly'" required=""/>
                                                        </div>
                                                    </div>                                                        

                                                    <div class="col-md-12 text-center">
                                                        <div class="single-get-touch mt-3">
                                                            <button type="submit" name="submit" class="btn btn-submit-ctm">Submit Documents</button>
                                                        </div>
                                                    </div>
                                                </div>
                                            </form>
                                        </div>
                                    </div>
                                </div>
                            </section>
                        </div>
                    </t>
                </t>
            </field>
        </record>
    </data>
</odoo>