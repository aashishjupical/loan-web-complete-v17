<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data noupdate="0">
        <record id="submit_doc_success" model="ir.ui.view">
            <field name="name">Submit Docs Success</field>
            <field name="type">qweb</field>
            <field name="key">jt_loan_project.submit_doc_success</field>
            <field name="arch" type="xml">
                <t name="Submit Doc Success Page" priority="19" t-name="jt_loan_project.submit_doc_success">
                    <t t-call="website.layout">
                        <div class="oe_structure" id="wrap">
                            <div class="oe_structure"/>
                            <section class="progress-area">
                                <div class="container">
                                    <ul class="list-unstyled multi-steps pt80 pb80">
                                        <li id="step-1">Apply Loan<div
                                                class="progress-bar progress-bar__success">
                                            </div>
                                        </li>
                                        <li id="step-2" >Personal Info <div
                                                class="progress-bar progress-bar__success">
                                            </div>
                                        </li>
                                        <li id="step-3">Business Info<div
                                                class="progress-bar progress-bar__success">
                                            </div>
                                        </li>
                                        <li id="step-4" >Financial Documents<div
                                                class="progress-bar progress-bar__success">
                                            </div>
                                        </li>
                                        <li id="step-5">Review Submit<div
                                                class="progress-bar progress-bar__success">
                                            </div>
                                        </li>
                                        <li id="step-6"  class="is-active">Success</li>
                                    </ul>
                                </div>
                            </section>

                            <section class="loan-submit-area px80">
                                <div class="container">
                                    <div class="row flx9">
                                        <div class="col-lg-5 col-md-6">
                                            <form enctype="multipart/form-data" method="post">
                                                <div class="lsa-content">
                                                    <h3>Submit Docs Success</h3>
                                                    <p>Lorem, ipsum dolor sit amet consectetur adipisicing elit. Doloremque, expedita ab. Dolore
                                                        doloremque repudiandae, iure unde quidem excepturi molestiae, et ad provident rerum mollitia
                                                        delectus dolores, deserunt repellat natus perferendis.</p>

                                                        <button class="btn btn-ctm-blue" type="submit">Close</button>
                                                </div>
                                            </form>
                                        </div>
                                        <div class="offset-lg-1 col-lg-6 col-md-6">
                                            <img class="img-fluid" src="/jt_loan_project/static/src/img/sucess.jpg" alt="Loan"/>
                                        </div>
                                    </div>
                                </div>
                            </section>
                        </div>
                    </t>
                </t>
            </field>
        </record>
    </data>
</odoo>