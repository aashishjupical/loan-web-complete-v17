    <template id="snippets_option_inherit" inherit_id="website.snippet_options"
        name="snippets Options Theme Footer">
        <xpath expr="//we-select[@data-variable='header-template']" position="inside">
            <we-button data-customize-website-variable="'Custom Header'"
                data-customize-website-views="jt_loan_project.jt_loan_web_header_layout"
                data-img="/jt_loan_project/static/src/img/header.png"
                data-name="custom_theme_header_opt" title="Custom Theme Header" />
        </xpath>
        <xpath expr="//we-select[@data-variable='footer-template']" position="inside">
            <we-button data-customize-website-variable="'Custom Footer'"
                data-customize-website-views="jt_loan_project.jt_loan_web_footer_layout"
                data-img="/jt_loan_project/static/src/img/footer.png"
