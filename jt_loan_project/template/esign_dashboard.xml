<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data noupdate="0">
        <record id="esign_dashboard" model="ir.ui.view">
            <field name="name">Esignature Agreement Dashboard</field>
            <field name="type">qweb</field>
            <field name="key">jt_loan_project.esign_dashboard</field>
            <field name="arch" type="xml">
                <t name="Esign Agreement Dashboard" priority="19" t-name="jt_loan_project.esign_dashboard">
                    <t t-call="website.layout">
                        <div class="oe_structure" id="wrap">
                            <div class="oe_structure"/>
                            <section class="progress-area">
                                <div class="container">
                                    <ul class="list-unstyled multi-steps pt80 pb80">
                                        <li id="step-1"  class="is-active">Esignature<div
                                                class="progress-bar progress-bar__success">
                                                <div class="progress-bar__bar"/>                                    
                                            </div>
                                        </li>
                                        <li id="step-2">Upload signed Agreement<div
                                                class="progress-bar progress-bar__success">
                                                <div class="progress-bar__bar"/>                                    
                                            </div>
                                        </li>                          
                                        <li id="step-3">Process<div
                                                class="progress-bar progress-bar__success">
                                                <div class="progress-bar__bar"/>                                    
                                            </div>
                                        </li>                                 
                                        <li id="step-4">Success</li>
                                    </ul>
                                </div>
                            </section>
                            <section class="need_esign_area px80">
                                <div class="container">
                                    <div class="row justify-content-center text-center">
                                        <div class="py-3">
                                            <div class="py-3">
                                                <h4 class="mt-2 text-success">Esignature Required</h4>
                                                <h5>Next Step sign Loan Agreement</h5>
                                            </div>
                                        </div>
                                    </div>

                                    <div class="row justify-content-center">
                                        <div class="col-md-12 col-lg-10">
                                            <form enctype="multipart/form-data" method="post">
                                                <div class="row list-input">
                                                    <div class="col-md-4 mr0">
                                                        <p>Monthly Repayment</p>
                                                        <div class="single-get-touch">
                                                            <input type="text" t-att-value="monthly_repayment" t-att-readonly="'readonly'" name="monthly_repayment" placeholder="Monthly Repayment" required="" />
                                                        </div>
                                                    </div>
                                                    <div class="col-md-4">
                                                        <p>Principal Sum</p>
                                                        <div class="single-get-touch">
                                                            <input type="text" t-att-value="principal_sum" t-att-readonly="'readonly'" name="principal_sum" placeholder="Principal Sum" required=""/>
                                                        </div>
                                                    </div>

                                                    <div class="col-md-4 mr0">
                                                        <p>Total Repayment</p>
                                                        <div class="single-get-touch">
                                                            <input type="text" t-att-value="total_repayment" t-att-readonly="'readonly'" name="total_repayment" placeholder="Total Repayment" required=""/>
                                                        </div>
                                                    </div>
                                                    <div class="col-md-4">
                                                        <p>Interest Rate</p>
                                                        <div class="single-get-touch">
                                                            <input type="text" t-att-value="interest_rate" t-att-readonly="'readonly'" name="interest_rate" placeholder="Interest Rate" required=""/>
                                                        </div>
                                                    </div>
                                                    <div class="col-md-4">
                                                        <p>Tenure/Duration</p>
                                                        <div class="single-get-touch">
                                                            <input type="text" t-att-value="tenure_duration" t-att-readonly="'readonly'" name="tenure" placeholder="Tenure/Duration" required=""/>
                                                        </div>
                                                    </div>
                                                    <div class="col-md-4 mr0">
                                                        <p>Stampping Fee</p>
                                                        <div class="single-get-touch">
                                                            <input type="text" t-att-value="stamping_fee" t-att-readonly="'readonly'" name="stamping_fee" placeholder="Stampping Fee" required=""/>
                                                        </div>
                                                    </div>                                                        

                                                    <div class="col-md-12 text-center">
                                                        <div class="single-get-touch mt-3">
                                                            <button type="submit" name="submit" class="btn btn-submit-ctm">E-sign Agreement</button>
                                                        </div>
                                                    </div>
                                                </div>
                                            </form>
                                        </div>
                                    </div>
                                </div>
                            </section>
                        </div>
                    </t>
                </t>
            </field>
        </record>
    </data>
</odoo>