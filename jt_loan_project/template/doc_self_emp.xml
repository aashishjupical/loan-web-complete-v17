<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data noupdate="0">
        <record id="doc_self_emp" model="ir.ui.view">
            <field name="name">doc self emp</field>
            <field name="type">qweb</field>
            <field name="key">jt_loan_project.doc_self_emp</field>
            <field name="arch" type="xml">
                <t name="doc self emp" priority="18" t-name="jt_loan_project.doc_self_emp">
                    <t t-call="website.layout">
                        <div class="oe_structure" id="wrap">
                            <div class="oe_structure"/>
                            <!-- html start -->
                            <section class="progress-area">
                                <div class="container">
                                    <ul class="list-unstyled multi-steps pt80 pb80">
                                        <li id="step-1">Apply Loan<div
                                                class="progress-bar progress-bar__success">
                                            </div>
                                        </li>
                                        <li id="step-2" >Personal Info <div
                                                class="progress-bar progress-bar__success">
                                            </div>
                                        </li>
                                        <li id="step-3">Business Info<div
                                                class="progress-bar progress-bar__success">
                                            </div>
                                        </li>
                                        <li id="step-4" class="is-active">Financial Documents<div
                                                class="progress-bar progress-bar__success">
                                            </div>
                                        </li>
                                        <li id="step-5">Review Submit<div
                                                class="progress-bar progress-bar__success">
                                                <div class="progress-bar__bar"/>
                                            </div>
                                        </li>
                                        <li id="step-6">Success</li>
                                    </ul>
                                </div>
                            </section>

                             <section class="doc-salarised-area pt-5">
                                <div class="container">
                                    <div class="row justify-content-center text-center">
                                        <div class="py-3">
                                            <h1>Lorem, ipsum.</h1>
                                            <p>Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut
                                                laboris nisi ut aliquip ex ea commodo consequat..</p>
                                        </div>
                                    </div>

                                    <div class="row justify-content-center">
                                        <div class="col-md-12 col-lg-10">
                                            <form class="apply-form" enctype="multipart/form-data" method="post">                        
                                                <div class="row list-input">
                                                    <div class="col-md-6 mr0">
                                                        <h5 class="mt-3">Business Registration Document</h5>
                                                        <p>SSM Registration</p>
                                                        <div class="single-get-touch">
                                                            <input type="file" class="form-control" name="self_employed_ssm_register" t-att-value="self_employed_ssm_register" placeholder="Company/Business Name" required="" />
                                                        </div>
                                                    </div>

                                                    <div class="col-md-6">
                                                        <h5 class="mt-3">Latest Utility Bill</h5>
                                                        <p>Lorem, ipsum dolor.</p>
                                                        <div class="single-get-touch">
                                                            <input type="file" class="form-control" name="self_employed_latest_utility_bill" t-att-value="self_employed_latest_utility_bill" placeholder="Company/Business Contact" required="" />
                                                        </div>
                                                    </div>


                                                    <div class="col-md-6 mr0">
                                                        <h5 class="mt-3">Personal Bank Statement (last 6 month)</h5>
                                                        <p>Lorem, ipsum dolor.</p>
                                                        <div class="single-get-touch">
                                                            <input type="file" class="form-control" name="personal_bank_statement" t-att-value="personal_bank_statement" placeholder="Company/Business Name" required="" />
                                                        </div>
                                                    </div>

                                                    <div class="col-md-6">
                                                        <h5 class="mt-3">Company Bank Statement (last 6 Month)</h5>
                                                        <p>Lorem, ipsum dolor.</p>
                                                        <div class="single-get-touch">
                                                            <input type="file" class="form-control" name="company_bank_statement" t-att-value="company_bank_statement" placeholder="Company/Business Contact" required="" />
                                                        </div>
                                                    </div>
                                                    
                                                    <div class="col-md-12 text-center">
                                                        <div class="single-get-touch mt-3">
                                                            <button type="submit" name="submit"
                                                                class="btn btn-dark btn-submit-ctm">Next</button>
                                                        </div>
                                                    </div>
                                                </div>
                                            </form>
                                        </div>

                                    </div>
                                </div>
                            </section>
                            <!-- html end -->
                        </div>
                    </t>
                </t>
            </field>
        </record>
    </data>
</odoo>