<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data noupdate="0">
        <record id="review_identity" model="ir.ui.view">
            <field name="name">Review Identity</field>
            <field name="type">qweb</field>
            <field name="key">jt_loan_project.review_identity</field>
            <field name="arch" type="xml">
                <t name="Review Identity Page" priority="19"
                    t-name="jt_loan_project.review_identity">
                    <t t-call="website.layout">
                        <div class="oe_structure" id="wrap">
                            <div class="oe_structure"/>
                            <section class="progress-area">
                                <div class="container">
                                    <ul class="list-unstyled multi-steps pt80 pb80">
                                            <li id="step-1" >Verify Info<div
                                                    class="progress-bar progress-bar__success">
                                                </div>
                                            </li>
                                            <li id="step-2" >Upload Front ID <div
                                                    class="progress-bar progress-bar__success">
                                                </div>
                                            </li>
                                            <li id="step-3" >Upload Back ID<div
                                                    class="progress-bar progress-bar__success">
                                                </div>
                                            </li> 
                                            <li id="step-4" >Upload Photo<div
                                                    class="progress-bar progress-bar__success">
                                                </div>
                                            </li>                                           
                                            <li id="step-5" class="is-active">Review &amp; Agree<div
                                                    class="progress-bar progress-bar__success">
                                                    <div class="progress-bar__bar"/>                                    
                                                </div>
                                            </li>                                       
                                            <li id="step-6">Success</li>
                                    </ul>
                                </div>
                            </section>

                            <section class="form-area jt_portal_details px80">
                                <div class="container">
                                    <div class="row">
                                        <div class="in-section-title-1 headline wow fadeInUp"
                                            data-wow-delay="100ms" data-wow-duration="1000ms"
                                            style="visibility: visible; animation-duration: 1000ms; animation-delay: 100ms; animation-name: fadeInUp;">
                                            <div
                                                class="sub-title position-relative text-uppercase">
                                                <span>Lorem, ipsum.</span>
                                            </div>
                                            <h2>Lorem, ipsum dolor.</h2>
                                            <p>Lorem ipsum dolor sit amet, consectetur
                                                adipiscing.</p>
                                        </div>
                                        <div class="col-md-12">
                                            <ul class="sd-iconic-details mt-40">
                                                <li class="s-docs">Front ID </li>
                                                <li class="s-docs">Back ID</li>
                                                <li class="s-docs">Photo</li>
                                            </ul>
                                        </div>
                                       <form class="apply-form" enctype="multipart/form-data" method="post">
                                            <h4 class="ld-summary my-3">Review your Information</h4>
                                            <div class="row justify-content-center">
                                                <div class="col-md-6">
                                                    <div class="summary-box">
                                                        <div class="single-get-touch">
                                                            <input class="form-control" type="text" name="monthlyP"
                                                                t-att-value="full_name"
                                                                placeholder="Full Name" readonly=""/>
                                                        </div>
                                                    </div>
                                                </div>

                                                <div class="col-md-6">
                                                    <div class="summary-box">
                                                        <div class="single-get-touch">
                                                            <input class="form-control" type="email" name="email"
                                                                t-att-value="email"
                                                                placeholder="Email" readonly="" />
                                                        </div>
                                                    </div>
                                                </div>

                                                <div class="col-md-12">
                                                    <div class="summary-box">
                                                        <div class="single-get-touch">
                                                            <input class="form-control" type="text" name="add1"
                                                                t-att-value="address_1"
                                                                placeholder="Address Line 1"
                                                                readonly="" />
                                                        </div>
                                                    </div>
                                                </div>

                                                <div class="col-md-12">
                                                    <div class="summary-box">
                                                        <div class="single-get-touch">
                                                            <input class="form-control" type="text" name="add2"
                                                                t-att-value="address_2"
                                                                placeholder="Address Line 2"
                                                                readonly="" />
                                                        </div>
                                                    </div>
                                                </div>

                                                <div class="col-md-6">
                                                    <div class="summary-box">
                                                        <div class="single-get-touch">
                                                            <input class="form-control" type="text" name="city"
                                                                placeholder="city" readonly=""
                                                                t-att-value="person_district" />
                                                        </div>
                                                    </div>
                                                </div>

                                                <div class="col-md-6">
                                                    <div class="summary-box">
                                                        <div class="single-get-touch">
                                                            <input class="form-control" type="text" name="postcode"
                                                                placeholder="postalcode"
                                                                t-att-value="person_postcode"
                                                                readonly="" />
                                                        </div>
                                                    </div>
                                                </div>

                                                <div class="col-md-6">
                                                    <div class="summary-box">
                                                        <div class="single-get-touch">
                                                            <input class="form-control" type="text" name="state"
                                                                t-att-value="person_state"
                                                                placeholder="state" readonly="" />
                                                        </div>
                                                    </div>
                                                </div>

                                                <div class="col-md-6">
                                                    <div class="summary-box">
                                                        <div class="single-get-touch">
                                                            <input class="form-control" type="text" name="ps"
                                                                t-att-value="person_country"
                                                                placeholder="Country" readonly="" />
                                                        </div>
                                                    </div>
                                                </div>
                                                <button class="btn btn-submit-ctm" type="submit">Submit</button>
                                            </div>
                                        </form>
                                    </div>
                                </div>
                            </section>
                        </div>
                    </t>
                </t>
            </field>
        </record>
    </data>
</odoo>