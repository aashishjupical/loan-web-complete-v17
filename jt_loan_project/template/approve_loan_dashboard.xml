<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data noupdate="0">
        <record id="approve_loan_dashboard" model="ir.ui.view">
            <field name="name">Dashboard Submit</field>
            <field name="type">qweb</field>
            <field name="key">jt_loan_project.approve_loan_dashboard</field>
            <field name="arch" type="xml">
                <t name="Dashboard Submit Doc" priority="19" t-name="jt_loan_project.approve_loan_dashboard">
                    <t t-call="website.layout">
                        <div class="oe_structure" id="wrap">
                            <div class="oe_structure"/>
                            <section class="progress-area">
                                <div class="container">
                                    <ul class="list-unstyled multi-steps pt80">
                                        <li id="step" class="is-active">
                                        </li>
                                    </ul>
                                </div>
                            </section>
                            <section class="need_esign_area">

                                <div class="container">
                                    <div class="row justify-content-center text-center">
                                        <t t-if="aprrove">
                                            <div class="py-3">
                                                <h4 class="mt-2 text-success">Your Loan is Processing</h4>
                                                <h5>To do Approval Process Take 2-3 working days</h5>
                                            </div>
                                        </t>

                                        <t t-if="esign">
                                            <div class="py-3">
                                                <h4 class="mt-2 text-success">Your Loan is Processing </h4>
                                                <h5>To do Esign verification Process Take 2-3 working days</h5>
                                            </div>
                                        </t>
                                    </div>
                                    <div class="row justify-content-center">
                                        <div class="col-md-12 col-lg-10">
                                            <!-- <form enctype="multipart/form-data" method="post"> -->
                                                <div class="row justify-content-center">
                                                <div class="col-md-12 col-lg-10">
                                                    <form enctype="multipart/form-data" method="post">                                                        
                                                        <div class="row list-input">
                                                            <div class="col-md-4 mr0">
                                                                <p>Monthly Repayment</p>
                                                                <div class="single-get-touch">
                                                                    <input type="text" class="form-control" t-att-value="monthly_repayment" name="monthly_repayment" placeholder="Monthly Repayment" t-att-readonly="'readonly'" required="" />
                                                                </div>
                                                            </div>
                                                            <div class="col-md-4">
                                                                <p>Principal Sum</p>
                                                                <div class="single-get-touch">
                                                                    <input type="text" class="form-control" t-att-value="principal_sum" name="principal_sum" placeholder="Principal Sum" t-att-readonly="'readonly'" required=""/>
                                                                </div>
                                                            </div>

                                                            <div class="col-md-4 mr0">
                                                                <p>Total Repayment</p>
                                                                <div class="single-get-touch">
                                                                    <input type="text" class="form-control" t-att-value="total_repayment" name="total_repayment" placeholder="Total Repayment" t-att-readonly="'readonly'" required=""/>
                                                                </div>
                                                            </div>
                                                            <div class="col-md-4">
                                                                <p>Interest Rate</p>
                                                                <div class="single-get-touch">
                                                                    <input type="text" class="form-control" t-att-value="interest_rate" name="interest_rate" placeholder="Interest Rate" t-att-readonly="'readonly'" required=""/>
                                                                </div>
                                                            </div>
                                                            <div class="col-md-4">
                                                                <p>Tenure/Duration</p>
                                                                <div class="single-get-touch">
                                                                    <input type="text" class="form-control" t-att-value="tenure_duration" name="tenure" placeholder="Tenure/Duration" t-att-readonly="'readonly'" required=""/>
                                                                </div>
                                                            </div>
                                                            <div class="col-md-4 mr0">
                                                                <p>Stampping Fee</p>
                                                                <div class="single-get-touch">
                                                                    <input type="text" class="form-control" t-att-value="stamping_fee" name="stamping_fee" placeholder="Stampping Fee" t-att-readonly="'readonly'" required=""/>
                                                                </div>
                                                            </div>
                                                        </div>
                                                    </form>
                                                </div>
                                            </div> 
                                        </div>
                                    </div>
                                </div>
                            </section>
                        </div>
                    </t>
                </t>
            </field>
        </record>
    </data>
</odoo>