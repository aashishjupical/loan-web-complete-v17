<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record model="ir.module.category" id="module_category_loan">
        <field name="name">Loan Application</field>
        <field name="description">Category For Loan</field>
        <field name="sequence">1</field>
    </record>
    
    <record id="cg_group_borrower" model="res.groups">
        <field name="name">Customer</field>
        <field name="category_id" ref="module_category_loan"/>
    </record>

    <record id="cg_group_system" model="res.groups">
        <field name="name">System Officer</field>
        <field name="category_id" ref="module_category_loan"/>
        <field name="implied_ids" eval="[(4, ref('project.group_project_user'))]"/>
    </record>

    <record id="cg_group_credit_officer" model="res.groups">
        <field name="name">Credit Officer</field>
        <field name="category_id" ref="module_category_loan"/>
        <field name="implied_ids" eval="[(4, ref('project.group_project_user'))]"/>
    </record>

    <record id="cg_group_legal" model="res.groups">
        <field name="name">Legal Officer</field>
        <field name="category_id" ref="module_category_loan"/>
        <field name="implied_ids" eval="[(4, ref('project.group_project_user'))]"/>
    </record>

    <record id="cg_group_approver" model="res.groups">
        <field name="name">Approver Officer</field>
        <field name="category_id" ref="module_category_loan"/>
        <field name="implied_ids" eval="[(4, ref('project.group_project_user'))]"/>
    </record>

    <record id="cg_group_finance" model="res.groups">
        <field name="name">Finance Officer</field>
        <field name="category_id" ref="module_category_loan"/>
        <field name="implied_ids" eval="[(4, ref('project.group_project_user'))]"/>
    </record>

    <record id="cg_group_collection" model="res.groups">
        <field name="name">Collection Officer</field>
        <field name="category_id" ref="module_category_loan"/>
        <field name="implied_ids" eval="[(4, ref('project.group_project_user'))]"/>
    </record>
</odoo>
