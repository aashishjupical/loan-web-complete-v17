<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="res_config_expire_sign_attestation_time_view_form" model="ir.ui.view">
            <field name="name">res.config.view.expire.sign.attestation.form.inherit.mrp</field>
            <field name="model">res.config.settings</field>
            <field name="priority" eval="35"/>
            <field name="inherit_id" ref="jt_loan_management.res_config_settings_view_form" />
            <field name="arch" type="xml">
                <xpath expr="//block[@id='bad_debt_account_loan']" position="before">
                    <block title="Configure Expire/Sign Attestation" id="expire_atte_main_id">
                        <setting id="expire_atte" string="Expiry to Review and Agree Attestation">
                            <field name="expire_attestation_time"/>
                        </setting>
                        <setting id="expire_in_person_atte" string="Expiry To In-person Attestation">
                            <field name="expire_inperson_att_time"/>
                        </setting>

                        <setting id="sign_atte" string="Expiry To Sign Agreement">
                            <field name="sign_attestation_time"/>
                        </setting>
                    </block>
                    <block title="Product Disclosure" id="product_disclosure_main_id">
                        <setting id="product_disclosure_id" string="Product Disclosure">
                            <field name="product_disclosure"/>
                        </setting>
                    </block>
                </xpath>
            </field>
        </record>
    </data>
</odoo>