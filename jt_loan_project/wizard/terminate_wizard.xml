<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="terminate_wizard_form_view" model="ir.ui.view">
        <field name="name">Terminate From Loan</field>
        <field name="model">terminate.wizard</field>
        <field name="arch" type="xml">
            <form string="Terminate Details">
                <group>
                    <field name="terminate_reason_id" required="True"/>
                    <field name="user_id" readonly="1"/>
                    <field name="task_id" invisible="1"/>
                    <field name="terminate_date" readonly="1"/>
                </group>
                <footer>
                    <button name="terminated" string="Terminate" type="object" class="oe_highlight" />
                    or
                    <button string="Cancel" class="oe_link" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>



    <record id="terminate_wizard_action" model="ir.actions.act_window">
        <field name="name">Terminate</field>
        <field name="res_model">terminate.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

</odoo>
